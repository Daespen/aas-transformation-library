{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://admin-shell-io.com/aas-transformation-config",
  "title": "AAS Transformation Config",
  "description": "This schema determines how tranformations with the aas-transformation-library can succeed.",
  "type": "object",
  "properties": {
    "@header": {
      "$ref": "#/$defs/Header"
    },
    "@mappings": {
      "description": "detailed mappings to AAS",
      "type": "object"
    }
  },
  "required": [
    "@header",
    "@mappings"
  ],
  "$defs": {
    "Header": {
      "description": "initial definitions",
      "type": "object",
      "properties": {
        "aasVersion": {
          "type": "string"
        },
        "@namespaces": {
          "$ref": "#/$defs/Namespaces"
        },
        "@definitions": {
          "$ref": "#/$defs/CompoundExpression"
        },
        "@variables": {
          "type": "object"
        }
      },
      "required": [
        "@namespaces",
        "aasVersion"
      ]
    },
    "Namespaces": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "format": "url"
      }
    },
    "Definitions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/CompoundExpression"
      }
    },
    "CompoundExpression": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "maxProperties": 1,
        "properties": {
          "@concatenate": {
            "$ref": "#/$defs/CompoundArgument"
          },
          "@concatenate_and_hash": {
            "$ref": "#/$defs/CompoundArgument"
          }
        }
      }
    },
    "CompoundArgument": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "$ref": "#/$defs/Expression"
          }
        ]
      }
    },
    "Expression": {
      "type": "object",
      "patternProperties": {
        "^@": {
          "type": "string"
        }
      },
      "minProperties": 1
    },
    "Variables": {
      "type": "object",
      "properties": {
        "$ref": "#/$defs/Expression"
      },
      "additionalProperties": false
    },
    "Mappings": {
      "type": "object",
      "properties": {
        "assetInformation": {
          "type": "object"
        },
        "assetShell": {
          "type": "object"
        },
        "submodels": {
          "type": "array"
        }
      },
      "required": [
        "assetInformation",
        "assetShell",
        "submodels"
      ]
    }
  }
}